<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.EditMapItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:showDividers="none">

            <TextView
                android:id="@+id/tv_article_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заголовок:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/tv_article_item_par1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/tv_article_item_par2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_article_item_par3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_article_item_par4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_article_item_par5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 5"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_article_item_par6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 6"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Name" />

            <TextView
                android:id="@+id/tv_article_item_par7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 7"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_article_item_par8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Параграф 8"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_item_par8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_article_icon_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Иконка статьи (заголовок):"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_icon_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_article_content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Иконка статьи (внутри):"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_article_content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="numberDecimal" />



            <Button
                android:id="@+id/article_item_apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Применить изменения"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>